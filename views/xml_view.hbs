<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/stylesheets/style.css"> 



    <title>Blood Bank</title>
  </head>
  <body>

    {{#if err.message}}
      <div class="d-flex justify-content-center"><p class="text-danger fw-bold">{{err.message}}</p></div>
    {{/if}}

    {{#if error.message}}
        <div class="d-flex justify-content-center"><p class="text-danger fw-bold">{{error.message}}</p></div>
    {{/if}}

    {{#if success.message}}
        <div class="d-flex justify-content-center"><p class="text-danger fw-bold">{{success.message}}</p></div>
    {{/if}}

    <div class="d-flex justify-content-center">
      <form method="POST" action="" enctype="multipart/form-data" class="w-25 p-3">
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1">Security Code</span>
          <input name="feedback" type="text" class="form-control">
        </div>

        <div class="mb-3">
            <label for="formFile" class="form-label">XML file</label>
            <input name = "attach" class="form-control" type="file" id="formFile">
          </div>            
        </div>
        <div class="mb-3 d-flex justify-content-center">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>


    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <!-- Option 2: Separate Popper and Bootstrap JS -->
